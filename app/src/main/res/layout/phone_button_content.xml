<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/linear_listener"
        android:layout_width="@dimen/phone_circle_width"
        android:layout_height="@dimen/phone_circle_width"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/phone_btn_selector">

        <TextView
            android:id="@+id/phonebtn_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phonebtn_alphabet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>